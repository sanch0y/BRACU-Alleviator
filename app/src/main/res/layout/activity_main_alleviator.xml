<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainAlleviatorActivity"
    android:background="@drawable/first_look">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BRACU Alleviator"
        android:id="@+id/txtVw"
        android:singleLine="false"
        android:textColor="#ff188de3"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:typeface="sans"
        android:textStyle="bold"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="FACULTY"
        android:id="@+id/fcltyBtn"
        android:onClick="facultyBtn"
        android:textColor="#ff111520"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:clickable="true"
        android:background="#ff1882d6"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/vwFlpr"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="STUDENT"
        android:id="@+id/stdntBtn"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textColor="#ff111520"
        android:textStyle="bold"
        android:onClick="studentBtn"
        android:clickable="true"
        android:background="#ff1882d6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fcltyBtn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_below="@+id/txtVw"
        android:layout_centerHorizontal="true"
        android:background="#996e8cbd" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/vwFlpr"
        android:autoStart="true"
        android:flipInterval="2000"
        android:layout_below="@+id/imageView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgVw1"
            android:adjustViewBounds="false"
            android:src="@drawable/pic1"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgVw2"
            android:adjustViewBounds="false"
            android:src="@drawable/pic2"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgVw3"
            android:adjustViewBounds="false"
            android:src="@drawable/pic3"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgVw4"
            android:adjustViewBounds="false"
            android:src="@drawable/pic4"
            android:scaleType="fitXY" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgVw5"
            android:adjustViewBounds="false"
            android:src="@drawable/pic5"
            android:scaleType="fitXY" />

    </ViewFlipper>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:text="Admin"
        android:id="@+id/button7"
        android:clickable="true"
        android:onClick="adminLogin"
        android:background="#0034363c"
        android:layout_above="@+id/vwFlpr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff070d14" />

</RelativeLayout>
